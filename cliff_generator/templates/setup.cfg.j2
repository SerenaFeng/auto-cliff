[metadata]
name = {{ project.name }}
summary = {{ project.summary }}
author = {{ project.author }}
author-email = {{ project['author-email'] }}
home-page = {{ project['home-page'] }}
license = Apache-2.0
classifier =
    Intended Audience :: Information Technology
    License :: OSI Approved :: Apache Software License
    Operating System :: POSIX :: Linux
    Programming Language :: Python
    Programming Language :: Python :: 2
    Programming Language :: Python :: 2.7

[global]
setup-hooks =
    pbr.hooks.setup_hook

[files]
packages =
    {{ project.package }}

data_files =
#    /etc/{{ project.package }} = etc/*

[entry_points]
console_scripts =
    {{ project.cli }} = {{ project.package }}.shell:main

{{ project.cli }} =
    {% for sub, actions in project.subs.items() -%}
    {% for action in actions -%}
    {{ sub }} {{ action }} = {{ project.package }}.cli.{{ sub }}:{{ sub|title }}{{ action|title }}
    {% endfor %}
    {% endfor %}
[egg_info]
tag_build =
tag_date = 0
tag_svn_revision = 0
